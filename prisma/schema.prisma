generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model User {
  id            Int       @id @unique
  createdAt     DateTime  @default(now())
  language      String    @default("en")
  activeSticker String    @default("0")
  stickers      Sticker[]

  @@map("users")
}

model Sticker {
  id        String   @id @unique // file_id of sticker
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  aliases   Alias[]

  @@map("stickers")
}

model Alias {
  sticker   Sticker @relation(fields: [stickerId], references: [id])
  stickerId String  @id @unique
  alias     String

  @@map("aliases")
}
